
# vi: syntax=gitconfig

[user]
	name = Todd Yamakawa
	email = todd.yamakawa@arm.com

[core]
	editor = vim
	#pager = vim -
	#pager = col -b | vim -c 'set ft=man ts=8 nomod nonu nolist noma' -

[sendemail]
	suppress-cc = all

[alias]
	alias = !git config -l | grep alias | cut -c 7-
	amend = commit --amend
	au = add -u
	bd = branch -d
	bl = branch -vv -a
	bname = rev-parse --abbrev-ref HEAD
	bpush = !git push --set-upstream origin $(git bname)
	br = branch
	bu = branch -u
	bv = branch -vv
	ci = commit
	cm = commit -m
	co = checkout
	cob = checkout -b
	cot = checkout --track
	diffs = diff --staged
	format-patch-1 = format-patch HEAD~1
	hub = "!f() { git clone https://github.com/$1/$2; }; f"
	info = remote show origin
	ls = log --pretty=format:\"%C(yellow)%h %C(blue)%<(14)[%ar] %C(green)%<(20)%an %Creset: %s\"
	ll = log --pretty=format:\"%C(yellow)%h %C(blue)%<(14)[%ar] %C(green)%<(20)%an %Creset: %s\" --numstat
	meld = difftool -t meld
	melds = difftool -t meld --staged
	msquash = merge --squash --no-commit
	pop = stash pop
	publish = push origin master:refs/publish/master
	pullr = pull --rebase
	pull-theirs = pull -s recursive -X theirs
	rv = remote -vv
	file = "!f() { git difftool $1{,^} -- $2; }; f"
	sha = "!f() { git diff --numstat $1{^,}; }; f"
	stat = status
	tagn = tag -n
	tags = log --tags --no-walk --decorate --oneline
	unstage = reset HEAD
	undo-merge = reset --hard ORIG_HEAD
	url = remote get-url origin
	vi = config --global -e
	vimdiff = difftool -t vimdiff
	vimdiffs = difftool -t vimdiff --staged

	# --- Git Repositories ---
	newasp = clone ssh://ds-gerrit.euhpc.arm.com:29418/svos/asp
	newiris = "!f() { [[ -n $1 ]] && iris=$1 || iris=iris; git clone ssh://todyam01@ds-gerrit.euhpc.arm.com:29418/svos/iris $iris && scp -p -P 29418 todyam01@ds-gerrit.euhpc.arm.com:hooks/commit-msg $iris/.git/hooks/; }; f"
	newkiwi = clone ssh://ds-gerrit.euhpc.arm.com:29418/svos/kiwi
	newkvs = clone login8.nahpc.arm.com:/projects/pd/svos/git/kvs
	newgem = clone login8.euhpc.arm.com:/arm/ref/pd/SVOS/tools/gem
	newruby = clone login8.euhpc.arm.com:/arm/ref/pd/SVOS/tools/ruby
	newambaviz = clone login8.euhpc.arm.com:/arm/ref/pd/SVOS/tools/ambaviz
	newporter = clone -b dev ssh://hw-gerrit.nahpc.arm.com:29418/systems/porter
	newares = clone -b releases/DM18p2 ssh://hw-gerrit.nahpc.arm.com:29418/cores/ares

